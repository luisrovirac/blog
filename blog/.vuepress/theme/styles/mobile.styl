@require './config'

$mobileSidebarWidth = $sidebarWidth * 0.82

// narrow desktop / iPad
@media (max-width: $MQNarrow)
  .sidebar
    font-size 12px
    width $mobileSidebarWidth
  .page
    padding-left $mobileSidebarWidth

// wide mobile
@media (max-width: $MQMobile)
  .nav-item
    a
      padding: 5px !important
  body
    font-size: 13px
  .blog__header
    padding-top: 0rem !important
  .carbon-ads
    position relative
    width: 100%
    margin-top 60px
    left 0px
    right 0px
    bottom: 0px
    z-index 0
    border-bottom: 1px solid $borderColor
    .carbon-wrap
      display: flex
      align-items: center
      justify-content: center
      .carbon-text
        font-size: .6rem
        padding: 0px 10px
      .carbon-img
        margin-bottom: 0px
      img
        min-width 80px
        margin-bottom: 0px
        margin-right: 10px
  .footerx
    display: block
    padding-left: 0px
    padding-right: 0px
    padding-bottom: 30px
    .con-uls
      flex-direction: column
  .sidebar
    top 0
    padding-top $navbarHeight
    transform translateX(-100%)
    transition transform .2s ease
  .page
    padding-left 0
  .theme-container
    &.sidebar-open
      .sidebar
        transform translateX(0)
    &.no-navbar
      .sidebar
        padding-top: 0

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.9rem
  .content
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0
